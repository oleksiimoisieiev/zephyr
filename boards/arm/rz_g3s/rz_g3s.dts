/dts-v1/;
#include <arm/renesas/rz/r9a08g045.dtsi>
#include <freq.h>
#include <mem.h>

/ {
	model = "Renesas RZ G3S board";
	compatible = "renesas,rz-g3s";

	chosen {
		zephyr,sram = &ram;
	};

	ram: memory@80000000 {
		compatible = "mmio-sram";
		reg = <0x80000000 DT_SIZE_M(1)>;		 /* 1  Mbyte of Internal RAM */
	};
};

&bus_clk {
	clock-frequency = <DT_FREQ_M(250)>;
};
